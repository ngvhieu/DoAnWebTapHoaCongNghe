@using DoAnTapHoaCongNghe.Models;
@model IList<Footer>
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<div id="preloader" class="">
							<div class="page-title">
								<h2> Chinh sua chan trang </h2>
							</div>
						</div>

						<table class="table table-bordered">
							<thead>
								<tr>
									<th class="text-center"> id</th>
									<th class="text-center"> Name </th>
									<th class="text-center" > Info </th>
									<th class="text-center"> Phone Number </th>
									<th class="text-center"> Address </th>
									<th class="text-center"> Email </th>
								</tr>
							</thead>
							<tbody id="table">
								@foreach (var item in Model)
								{
									<tr>
										<td class="text-center"> @item.id</td>
										<td class="text-center"> @item.name </td>
										<td class="text-center" style="white-space: pre-wrap;"> @item.infor </td>
										<td class="text-center"> @item.phone </td>
										<td class="text-center"> @item.address </td>
										<td class="text-center"> @item.email </td>
										<td class="text-center d-flex justify-content-around">
											<a href="/admin/footer/edit/@item.id" class="align-items-center d-flex justify-content-center btn btn-outline-warning" style="height:30px">
												<i class="mdi mdi-border-color btn-icon-prepend"></i>
												<button class=" btn-icon-text btn-icon-text" style="border:none;background-color:transparent; height:30px">Edit</button>
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>