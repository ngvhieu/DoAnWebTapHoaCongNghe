@using DoAnTapHoaCongNghe.Models;
@model IList<Services>
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@await Component.InvokeAsync("AdminMenu")
<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<div id="preloader" class="">
							<div class="page-title">
								<h2> Danh sach dich vu </h2>
							</div>
						</div>
						<p>
							<a type="button" class="btn btn-outline-success btn-icon-text" asp-area="Admin" asp-controller="Services" asp-action="Create">
								<i class="bi bi-file-earmark-text me-1"></i> Thêm dich vu
							</a>
							<table class="table table-bordered">
								<thead>
									<tr>
										<th class="text-center"> ID </th>
										<th class="text-center"> Name </th>
										<th class="text-center"> Info </th>
										<th class="text-center"> Image</th>
										<th class="text-center"> Link</th>
									</tr>
								</thead>
								<tbody id="table">
									@foreach (var item in Model)
									{
										<tr>
											<td class="text-center"> @item.services_id </td>
											<td><a asp-area="Admin" asp-controller="Services" asp-action="Details" asp-route-id="@item.services_id" class="text-primary"></a> @item.services_name </td>
											<td class="text-primary" style="color: black !important;"> @item.services_info </td>
											<td class="text-center"> @item.image</td>
											<td class="text-center"> @item.link</td>
											<td class="text-center d-flex justify-content-around">

												<a href="/admin/Services/edit/@item.services_id" class="align-items-center d-flex justify-content-center btn btn-outline-warning" style="height:30px">
													<i class="mdi mdi-border-color btn-icon-prepend"></i>
													<button class=" btn-icon-text btn-icon-text" style="border:none;background-color:transparent; height:30px">Edit</button>
												</a>

												<form asp-area="Admin" asp-controller="Services" asp-action="Delete" asp-route-id="@item.services_id" class="align-items-center d-flex justify-content-center btn btn-outline-danger" method="post" style="height:30px">
													<i class="mdi mdi-delete-forever btn-icon-prepend"></i>
													<button class=" btn-icon-text btn-icon-text" style="border:none;background-color:transparent; height:30px" type="submit">Delete</button>
												</form>

											</td>
										</tr>
									}
								</tbody>
							</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>