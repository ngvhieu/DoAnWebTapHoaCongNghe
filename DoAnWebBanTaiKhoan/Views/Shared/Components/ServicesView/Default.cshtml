@using DoAnTapHoaCongNghe.Models;
@model IList<Services>
<!-- ======= Services Section ======= -->
<section id="service" class="services pt-0">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <span>Our Services</span>
            <h2>Our Services</h2>

        </div>

        <div class="row gy-4">
            @foreach(var ml in Model)
            {
				<div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
					<div class="card">
						<div class="card-img">
							<img src="@ml.image" alt="" class="img-fluid">
						</div>
						<h3><a href="service-details.html" class="stretched-link">@ml.services_name</a></h3>
						<p>@ml.services_info</p>
					</div>
				</div>
            }
            

        </div>

    </div>
</section><!-- End Services Section -->