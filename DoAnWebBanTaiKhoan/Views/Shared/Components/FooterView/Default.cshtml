@using DoAnTapHoaCongNghe.Models;
@model IList<Footer>
<footer id="footer" class="footer">
    @foreach (var cc in Model)
    {
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-5 col-md-12 footer-info">
                    <a href="index.html" class="logo d-flex align-items-center">
                        <span>@cc.name</span>
                    </a>
                    <p>@cc.infor</p>
                    <div class="social-links d-flex mt-4">
                        <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-6 footer-links">
                    <h4>Our Services</h4>
                    <ul>
                        <li><a href="">Web Design</a></li>
                        <li><a href="">Web Development</a></li>
                        <li><a href="">Product Management</a></li>
                        <li><a href="">Marketing</a></li>
                        <li><a href="">Graphic Design</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-12 footer-contact text-center text-md-start">
                    <h4>Contact Us</h4>
                    <p>
                        <strong>Address:</strong> @cc.address<br>
                        <strong>Phone:</strong> @cc.phone<br>
                        <strong>Email:</strong> @cc.email<br>
                    </p>

                </div>

            </div>
        </div>
    }
   

    <div class="container mt-4">
        <div class="copyright">
            &copy; Copyright <strong><span>TAPHOADB</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by <a href="https://www.facebook.com/hieudeptryyyy">HieuDepTrai</a>
        </div>
    </div>

</footer><!-- End Footer -->
