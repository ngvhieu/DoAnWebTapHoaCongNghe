@model List<DoAnTapHoaCongNghe.ViewModels.OrderViewModel>
<section id="hero" class="hero align-items-center" style="height: 10px; min-height: 0;">
</section>
<div class="">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div id="" class="">
                            <div class="page-title">
                                <h2>Order Details</h2>
                            </div>
                        </div>
                            <table class="table">
                                <thead>
                                    <tr>
										<th class="text-center">Mã đơn hàng</th>
                                        <th class="text-center">Tên sản phẩm</th>
                                    <th class="text-center">Nguoi ban</th>
                                        <th class="text-center">Mã sản phẩm</th>
                                        <th class="text-center">Giá trị</th>
                                        <th class="text-center">Nội dung</th>
                                    </tr>
                                </thead>
                                <tbody id="table">
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@order.OrderID</td>
                                            <td class="text-center">@order.ProductName</td>
                                        <td class="text-center">@order.ShopName</td>
                                            <td class="text-center">@order.ProductCode</td>
                                            <td class="text-center">@order.Value</td>
                                            <td class="text-center">@order.Detail</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
